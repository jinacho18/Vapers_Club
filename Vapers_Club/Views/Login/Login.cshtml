@model Vapers_Club.Models.ViewModels.cLogin
@{
    ViewBag.Title = "Inicio de Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideNavigationBar = true;
}

<style>
    /* Fondo del Jumbotron con un degradado más suave */
    .jumbotron {
        background: linear-gradient(135deg, #ff66cc, #ff3399, #ff00cc); /* Degradado con más tonos de rosa */
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 0 30px rgba(255, 102, 204, 0.5); /* Sombra más grande */
        text-align: center;
        color: #fff;
    }

    /* Título con efecto neón menos saturado */
    h1 {
        font-size: 3rem;
        margin-bottom: 20px;
        font-family: 'Arial', sans-serif;
        color: #fff;
        text-shadow: 0 0 10px #ff66cc, 0 0 20px #ff66cc, 0 0 30px #ff66cc, 0 0 40px #ff66cc;
    }

    /* Texto descriptivo con sombra neón más suave */
    p {
        font-size: 1.2em;
        line-height: 1.6;
        font-family: 'Arial', sans-serif;
        color: #fff;
        text-shadow: 0 0 5px #ff66cc, 0 0 10px #ff66cc, 0 0 15px #ff66cc;
    }

    /* Botones con color azul neón más suave y menos saturado */
    .btn-neon {
        background-color: #00d4ff; /* Azul más suave */
        border: 2px solid #00d4ff; /* Borde azul suave */
        color: #fff;
        font-weight: bold;
        font-size: 1.2em;
        box-shadow: 0 0 5px #00d4ff, 0 0 10px #00d4ff, 0 0 15px #00d4ff; /* Sombra azul suave */
        transition: all 0.2s ease-in-out;
        margin-bottom: 15px; /* Separa un poco los botones */
    }

        /* Efecto de hover para los botones, con color ligeramente más fuerte */
        .btn-neon:hover {
            background-color: #00a3cc; /* Azul más intenso en hover */
            border: 2px solid #00a3cc;
            color: #fff;
            box-shadow: 0 0 10px #00a3cc, 0 0 20px #00a3cc, 0 0 25px #00a3cc;
        }

    /* Entrada de texto con borde rosado y sombra neón más suave */
    .form-control {
        border: 2px solid #ff66cc;
        background-color: #222;
        color: #fff;
        font-size: 1.2em;
        box-shadow: 0 0 10px #ff66cc, 0 0 20px #ff66cc;
    }

        .form-control:focus {
            border-color: #ff66cc;
            box-shadow: 0 0 15px #ff66cc;
            background-color: #333;
        }

    /* Estilo para las validaciones */
    .validation-message {
        color: #ff66cc;
        font-weight: bold;
        text-shadow: 0 0 5px #ff66cc;
    }
</style>

<br />
@if (ViewBag.ValorMensaje == 1)
{
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">Mensaje</h2>
                </div>
                <div class="modal-body">
                    <div class="alert alert-success">@ViewBag.MensajeProceso</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}
else
{
    if (ViewBag.ValorMensaje == 0)
    {
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Mensaje</h4>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-danger">@ViewBag.MensajeProceso</div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    }
}

<br />

<div class="jumbotron text-center">
    <h1>INICIO DE SESIÓN</h1>
    <p class="lead">Ingrese su usuario y contraseña</p>
</div>

@using (Html.BeginForm("Ingresar", "Login", FormMethod.Post))
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(u => u.userusuario)
                    @Html.TextBoxFor(u => u.userusuario, new { @class = "form-control" })
                    @Html.ValidationMessage("UserUsuario", new { @class = "validation-message" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(u => u.ctrUsuario)
                    @Html.PasswordFor(u => u.ctrUsuario, new { @class = "form-control" })
                    @Html.ValidationMessage("CtrUsuario", new { @class = "validation-message" })
                </div>

                <input type="submit" class="btn btn-neon btn-block btn-lg" value="Iniciar Sesión" />
                <input type="button" class="btn btn-neon btn-block btn-lg" value="Volver" onclick="document.location.href='@Url.Content("~/")'" />
            </div>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript">$('#myModal').modal('show');</script>
}