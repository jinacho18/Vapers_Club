@model Vapers_Club.Models.ViewModels.cLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .jumbotron {
        background: linear-gradient(to bottom right, #8F20A2, #00ADA7); /* Cambia los colores degradados según tus preferencias */
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Agrega una sombra suave */
        text-align: center;
        color: #333; /* Color de texto */
    }

    h1 {
        font-size: 2.5em; /* Tamaño del título */
        margin-bottom: 20px; /* Espaciado inferior */
        font-family: 'Arial', sans-serif; /* Fuente del título */
    }

    p {
        font-size: 1.2em; /* Tamaño del texto */
        line-height: 1.6; /* Altura de línea */
        font-family: 'Arial', sans-serif; /* Fuente del texto */
    }
</style>


<br />
@if (ViewBag.ValorMensaje == 1)
{
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title">Mensaje</h2>
                </div>
                <div class="modal-body">
                    <div class="alert alert-success">@ViewBag.MensajeProceso</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div> }
else
{
    if (ViewBag.ValorMensaje == 0)
    {
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Mensaje</h4>
                    </div>
                    <div class="modal-body">
                        <div class="alert alert-danger">@ViewBag.MensajeProceso</div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>}
}

<br />

<div class="jumbotron text-center">
    <h1>LOGIN</h1>
    <p class="lead">Ingrese su usuario y contraseña</p>
</div>
@using (Html.BeginForm("Ingresar", "Login", FormMethod.Post))
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(u => u.userusuario)
                    @Html.TextBoxFor(u => u.userusuario, new { @class = "form-control" })
                    @Html.ValidationMessage("UserUsuario", new { style = "color:red; font-weight: bold;" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(u => u.ctrUsuario)
                    @Html.PasswordFor(u => u.ctrUsuario, new { @class = "form-control" })
                    @Html.ValidationMessage("CtrUsuario", new { style = "color:red; font-weight: bold;" })
                </div>


                <input type="submit" class="btn btn-primary btn-block btn-lg" value="Iniciar Sesión" style="background-color: #00ADA7" />
                <input type="button" class="btn btn-primary btn-block btn-lg" value="Volver" style="background-color: #00ADA7" onclick="document.location.href='@Url.Content("~/")'" />
            </div>
        </div>
    </div>}

@section Scripts {
    <script type="text/javascript">$('#myModal').modal('show');</script>
}
