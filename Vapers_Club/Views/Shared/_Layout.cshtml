<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vapers Club</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (ViewBag.HideNavigationBar != true) //Condición para ocultar la barra
    {

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Vapers Club", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Almacen", "Index", "Almacen")</li>
                        <li>@Html.ActionLink("Categoría", "mantCateg", "Categoria")</li>
                        <li>@Html.ActionLink("Cliente", "mantCliente", "Cliente")</li>
                        <li>@Html.ActionLink("Devoluciones", "Index", "Devoluciones")</li>
                        <li>@Html.ActionLink("Entrega", "mantEntrega", "Entrega")</li>
                        <li>@Html.ActionLink("Marca", "mantMarca", "Marca")</li>
                        <li>@Html.ActionLink("Producto", "mantProducto", "Producto")</li>
                        <li>@Html.ActionLink("Proveedor", "mantProveedor", "Proveedor")</li>
                        <li>@Html.ActionLink("Usuario", "mantUser", "User")</li>
                    </ul>
                </div>
            </div>
        </div>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Vapers Club</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
