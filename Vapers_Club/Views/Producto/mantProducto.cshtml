@model List<Vapers_Club.Models.ViewModels.cListaProducto>
@{
    ViewBag.Title = "mantProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productos</h2>
<br />
<br />

<div class="row">
    <div class="col-md-4">
        <input type="button" class="btn btn-primary btn-block btn-lg" onclick="document.location.href='@Url.Content("~/Producto/agregarProducto")'" value="Nuevo Producto" />
    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Identificación</th>
                    <th>Nombre</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Marca</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fila in Model)
                {
                    <tr>
                        <td>@fila.id</td>
                        <td>@fila.nombre</td>
                        <td>@fila.cantidad</td>
                        <td>@fila.precio</td>
                        <td>@fila.nombrem</td>
                        <td><input type="button" value="Consultar" class="btn btn-default" onclick="document.location.href='@Url.Content("~/Producto/consultarproducto/"+fila.id)'" /></td>
                        <td><input type="button" value="Editar" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Producto/actualizarproducto/"+fila.id)'" /></td>
                        <td><input type="button" value="Eliminar" class="btn btn-danger" onclick="document.location.href='@Url.Content("~/Producto/eliminarproducto/"+fila.id)'" /></td>
                    </tr>
                }
            </tbody>
        </table>
        <input type="button" value="Menú" class="btn btn-primary" style="background-color: #00ADA7" onclick="document.location.href='@Url.Content("~/Home/Index")'" />
    </div>
</div>
