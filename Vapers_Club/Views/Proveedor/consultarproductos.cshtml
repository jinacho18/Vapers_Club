@model List<Vapers_Club.Models.ViewModels.Productoproveedores>
@{
    ViewBag.Title = "consultarproductos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productos</h2>
<br />
<br />
<div class="row">
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fila in Model)
                {
                    <tr>
                        <td>@fila.nombre</td>
                        <td>
                            <input type="button" value="Eliminar" class="btn btn-danger" onclick="document.location.href='@Url.Action("eliminaraprodpr", "Proveedor", new { id = fila.id, ip = fila.nombre })'" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <input type="button" value="Volver" class="btn btn-default btn-block btn-lg" onclick="document.location.href='@Url.Content("~/Proveedor/mantProveedor")'" />
    </div>
</div>
