@model List<Vapers_Club.Models.ViewModels.cListaCateg>
@{
    ViewBag.Title = "mantCateg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categorías</h2>
<br />
<br />

<div class="row">
    <div class="col-md-4">
        <input type="button" class="btn btn-primary btn-block btn-lg" onclick="document.location.href='@Url.Content("~/Categoria/agregarCateg")'" value="Nueva Categoría" />
    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fila in Model)
                {
                    <tr>
                        <td>@fila.id</td>
                        <td>@fila.nombre</td>
                        <td><input type="button" value="Consultar" class="btn btn-default" onclick="document.location.href='@Url.Content("~/Categoria/consultarcateg/"+fila.id)'" /></td>
                        <td><input type="button" value="Editar" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Categoria/actualizarcateg/"+fila.id)'" /></td>
                        <td><input type="button" value="Eliminar" class="btn btn-danger" onclick="document.location.href='@Url.Content("~/Categoria/eliminarcateg/"+fila.id)'" /></td>
                    </tr>
                }
            </tbody>
        </table>
        <input type="button" value="Menú" class="btn btn-primary" style="background-color: #00ADA7" onclick="document.location.href='@Url.Content("~/Home/Menu")'" />
    </div>
</div>
